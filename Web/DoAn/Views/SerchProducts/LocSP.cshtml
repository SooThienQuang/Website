@model IEnumerable<DoAn.Models.HangSanXuat>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<div class="container">
    <div class="row">
        <div class="col-sm-3">
            <h3 style="color:brown">Hãng sản xuất</h3>
        </div>
        <div class="col-sm-9">
            @foreach (var item in Model)
            {

                <button type="button" onclick="location.href='@Url.Action("LocTheoHangSanXuat", "SerchProducts",new {ma=item.MAHSX})'" class="btn btn-outline-warning"><h3>@item.TENHSX</h3></button>
            }

        </div>
    </div>
</div>





